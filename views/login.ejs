<% include partials/head.ejs %>


  <body>


    <div class="col-sm-2 col-sm-offset-5">
      <div class="jumbotron text-center">
        <h2>Signin</h2>

        <% if (message != null) { %>
        	<div class="alert-danger"><%= message %></div>
        <% } %>

        <form action="/login" method="post">
          <div class="form-group" id="formEmail">
              <label>Email</label>
              <input type="text" class="form-control" name="email" required>
          </div>
          <div class="form-group" id="formPass">
            <label>Password</label>
            <input type="password" class="form-control" name="password" required>
          </div>
          <div>
            <input type="submit" class="form-control" value="Signin" />
          </div>
        </form>

          <% include partials/googleauth.ejs %>

      </div>
      <hr>
      <span class="fa fa-sign-in">Dont have an account?<a href="/signup">Register</a></span>
        <% include partials/foot.ejs %>
    </div>
  </body>
</html>
